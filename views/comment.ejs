<%- include("commentheader") -%>

<div class="box" id="heading">
  <h1> Comments</h1>
</div>

<div class="box">
  <% for(var i=0;i<newListItems.comment.length;i++){ %>
  <div class="item">
    <p><%= newListItems.comment[i]%></p>
  </div>
  <%}%>


  <form class="item" action="/comment" method="post">
    <input type="text" name="newItem" placeholder="Add comments" autocomplete="off">
    <button type="submit" name="list">+</button>
  </form>
</div>

<%- include("commentfooter") -%>
